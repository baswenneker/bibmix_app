<%= stylesheet_link_tag 'evaluation' %>

<h1>Evaluation</h1>
<form id="evaluation-form" method="post" action="/evaluations/show">
<div id="citation-container">
	Evaluator: <br />
	<input type="text" id="evaluator" name="evaluator" value="<%= @evaluation.evaluator %>"/><br />
	Citation:
	<input type="hidden" id="citation-id" name="citation_id" value="<%= @citation.id %>"/><br />
	<div><%= @citation.citation %></div><br />
	<input type="radio" name="parser" value="parscit" id="radio-parscit" <%=(@evaluation.parser=='parscit'?'checked="checked"':'')%>/> <label for="radio-parscit">parscit</label>
	<input type="radio" name="parser" value="freecite" id="radio-freecite" <%=(@evaluation.parser=='freecite'?'checked="checked"':'')%>/> <label for="radio-freecite">freecite</label>
</div>

<div id="comparison-container">
	<div id="comparison-table-container">
		
	</div>
</div>

<div id="eval-container">
	Note:<br />
	<textarea id="eval-note"></textarea><br />
	<input type="radio" name="evaluation" id="eval-ok" value="1"/> <label for="eval-ok">OK</label> 
	<input type="radio" name="evaluation" id="eval-not-ok" value="0"/> <label for="eval-not-ok">Not OK</label> 
	<br />
	<input type="submit" id="evaluation-btn">Send</button>
</div>
</form>
<%= javascript_include_tag 'prototype' %>

<%= javascript_include_tag 'evaluation/abstract_comparison_table' %>
<%= javascript_include_tag 'evaluation/abstract_record' %>
<%= javascript_include_tag 'evaluation/record' %>
<%= javascript_include_tag 'evaluation/record_comparison_table' %>
<%= javascript_include_tag 'evaluation/application' %>

 